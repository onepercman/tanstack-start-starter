{
	"$schema": "https://biomejs.dev/schemas/2.3.5/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": [
			"**/*.ts",
			"**/*.tsx",
			"**/*.js",
			"**/*.jsx",
			"**/*.json",
			"!!**/*.gen.ts",
			"!!dist",
			"!!build",
			"!!.output",
			"!!node_modules",
			"!!.vinxi",
			"!!.react-router",
			"!!.tanstack"
		]
	},
	"formatter": {},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded"
		}
	},
	"linter": {
		"rules": {
			"recommended": true,
			"a11y": {
				"noLabelWithoutControl": "off",
				"noSvgWithoutTitle": "off",
				"useValidAnchor": "off",
				"useButtonType": "off"
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			},
			"complexity": {
				"noForEach": "off",
				"noStaticOnlyClass": "off",
				"noUselessEmptyExport": "off",
				"useLiteralKeys": "off"
			},
			"correctness": {
				"noUnusedImports": { "fix": "safe", "level": "info" },
				"useExhaustiveDependencies": "off"
			},
			"style": {
				"noNegationElse": "off",
				"noParameterAssign": "off",
				"useTemplate": "warn",
				"noNonNullAssertion": "off",
				"useImportType": "error",
				"useShorthandAssign": "error",
				"useAsConstAssertion": "error"
			},
			"suspicious": {
				"noArrayIndexKey": "off",
				"noExplicitAny": "off",
				"noConsole": "off",
				"noMisleadingCharacterClass": "error"
			},
			"nursery": {
				"useSortedClasses": {
					"level": "info",
					"fix": "safe",
					"options": {
						"functions": ["cn", "cx", "tv", "clsx"]
					}
				}
			}
		}
	}
}
